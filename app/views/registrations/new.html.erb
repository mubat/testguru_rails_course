<% @title = t('devise.registrations.new.sign_up') %>
<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <div class="card border-primary">
      <div class="card-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">

            <p>
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email" %>
            </p>
            <p>
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
              <% end %><br/>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            </p>
            <p>
              <%= f.label :password_confirmation %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </p>
            <p>
              <%= f.label :first_name %><br/>
              <%= f.password_field :first_name, class: 'form-control' %>
            </p>
            <p>
              <%= f.label :last_name %><br/>
              <%= f.password_field :last_name, class: 'form-control' %>
            </p>
            <%= f.submit t('devise.registrations.new.sign_up') %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-1">
      <%= render "shared/links" %>
    </div>
  </div>
</div>
