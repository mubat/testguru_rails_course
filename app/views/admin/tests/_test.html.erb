<tr>
  <td><%= test.category.title %></td>
  <td>
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td><%= test.level %></td>
  <td><%= button_to(t('application.button.detail'), admin_test_path(test), method: :get) %></td>
  <td>
    <%= button_to t('application.button.update'),
                  edit_admin_test_path(test),
                  method: :get,
                  class: 'form-inline-link',
                  data: { test_id: test.id }
    %>
  </td>
  <td><%= button_to(t('application.button.delete'),
                    admin_test_path(test),
                    data: { :confirm => t('application.confirm_delete') },
                    method: :delete) %></td>
</tr>

