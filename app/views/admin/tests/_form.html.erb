<%= form_with model: [:admin, model] do |form| %>
  <%= form.hidden_field :category_id %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :level %>
    <%= form.text_field :level %>
  </p>

  <p>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>

  </p>

  <p><%= form.submit %></p>
<% end %>
