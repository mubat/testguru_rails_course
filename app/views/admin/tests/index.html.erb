<% @title = t '.title' %>
<%= link_to t('application.button.add'), new_admin_test_path %>
<p><%= t '.found_count', count: @tests.count %></p>
<table class="table table-striped">
  <thead class="table-dark">
  <tr>
    <th><%= t 'helpers.label.test.category_id' %></th>
    <th class="sort-by-title pointer">
      <%= t 'helpers.label.test.title' %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th><%= t 'helpers.label.test.level' %></th>
    <th colspan="3" class="text-center"><%= t 'tests.index.fields.actions' %></th>
  </tr>
  </thead>
  <tbody>
  <%= render @tests %>
  </tbody>
</table>