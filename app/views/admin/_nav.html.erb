<div class="header">
  <div class="header-item logo"><%= link_to 'TestGuru', root_path %></div>
  <div class="header-item admin-panel"><%= t '.admin_panel' %></div>
  <% if user_signed_in? %>
    <div class="header-item logout"><%= link_to t('layouts.application.logout'), destroy_user_session_path, method: :delete %></div>
    <div class="header-item user"><%= t 'layouts.application.welcome', user: current_user.name || current_user.email %></div>
  <% else %>
    <ul class="header-item menu">
      <li><%= link_to t('layouts.application.sign_up'), new_user_registration_path %></li>
      <li><%= link_to t('layouts.application.login'), new_user_session_path %></li>
    </ul>
  <% end %>
</div>