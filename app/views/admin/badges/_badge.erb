<tr>
  <td><%= badge.name %></td>
  <td><%= BadgesService.rule_title(badge.rule) %></td>
  <td><%= image(badge.filename) %></td>
  <td><%= button_to(t('application.button.detail'), admin_badge_path(badge), method: :get) %></td>
  <td><%= button_to(t('application.button.delete'),
                    admin_badge_path(badge),
                    data: { :confirm => t('application.confirm_delete') },
                    method: :delete) %></td>
</tr>

